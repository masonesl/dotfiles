(defwindow topbar
  :monitor 0
  :stacking "fg"
  :wm-ignore false
  :exclusive true
  :geometry (geometry
              :anchor "top center"
              :x "0%"
              :y "0%"
              :width "100%"
              :height "32px"
              )
  (box
    (box
      :halign "start"
      (workspaces-section
        :orientation "h"
	:valign "center"
	:halign "start")
      (clock-section)
      (media-section)
      )
    )
  )
