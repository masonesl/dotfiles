;; Get the current time in the format: 01 05  Mon Feb 05
(defpoll clock-text
  :interval "2s"
  "date +'%I %M   %a %b %d'")

;; Define a widget to display the current clock text
(defwidget clock-section [monitor-class]
  (eventbox
    :class "clock-section ${monitor-class}"
    :halign "center"
    :valign "center"

    (label
      :class "clock-text"
      :text "ó°¥”   ${clock-text}")
  )
)
